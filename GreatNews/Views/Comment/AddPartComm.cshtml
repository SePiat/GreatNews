                            <label id="date" for="date">@DateTime.Now</label>

                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="media-text text-justify">
                            <textarea class="form-control" id="CommentText" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="waves-effect waves-light btn reg-btn btn-primary">Add comment</button>
                    </div>
                </div>
            </div>
        </li>
       </ul>
</div>


