<div class="comments">
    <h3 class="title-comments">Comments</h3>
    <ul class="media-list">
            <li class="media">
            <div class="media-left">
                <a href="#">
                    <!--<img class="media-object img-rounded" src="avatar1.jpg" alt="..."> -->

                </a>
            </div>
            <div class="media-body">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <label id="author" class="author">@User.Identity.Name</label>
